  [int_tc_type = 'primary'][zoom >= 15] {
    marker-fill: @primary-casing;
    marker-width: @primary-width-z15 * 1.6 + 2 * @casing-width-z15;
    marker-height: @primary-width-z15 * 1.6 + 2 * @casing-width-z15;
    [zoom >= 17] {
